# Database connection
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/office_nexus?schema=public"

# Application
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=3600 # 1 hour in seconds
JWT_REFRESH_EXPIRATION=604800 # 7 days in seconds

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173 

# Default Permissions
# Comma-separated list of permission IDs that must exist in every role
# Format: permission1,permission2,permission3
DEFAULT_PERMISSIONS=auth:change-password,auth:login,auth:logout,auth:refresh-token,auth:reset-password
